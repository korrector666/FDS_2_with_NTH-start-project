//- Все примеси в этом файле должны начинаться c имени блока (toggle)

mixin toggle(text, status, name, title, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +toggle('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' toggle--' + modsList[i].trim();
      }
    }

  .toggle(class=allMods)&attributes(attributes)
    .toggle__inner
      label
        input(type='checkbox' checked=_status name= name)
        .toggle__text #{text}    
    block
