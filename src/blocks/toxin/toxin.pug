//- Все примеси в этом файле должны начинаться c имени блока (toxin)

mixin toxin(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +toxin('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' toxin--' + modsList[i].trim();
      }
    }

  .toxin(class=allMods)&attributes(attributes)
    .toxin__logo
    .toxin__text
  block
