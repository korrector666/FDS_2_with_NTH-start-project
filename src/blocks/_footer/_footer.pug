//- Все примеси в этом файле должны начинаться c имени блока (_footer)

mixin _footer(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +_footer('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _footer--' + modsList[i].trim();
      }
    }

  ._footer(class=allMods)&attributes(attributes)
    ._footer__inner
      block
