//- Все примеси в этом файле должны начинаться c имени блока (_pagination)

mixin _pagination(text,list, active,  mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   list    {number} - число страниц
  //-   active    {number} - номер активной страницы

  //-   mods    {string} - список модификаторов
  //- Вызов:
        +_pagination('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _pagination--' + modsList[i].trim();
      }
    }
    let n = 0 , 
        m =5,
        itemList = [];

    


  ._pagination(class=allMods)&attributes(attributes)
    ._pagination__inner
      ._pagination__prev
      while n< m
        if (n == 0) 
          ._pagination__item._pagination__item--active
            p= ++n
        else
          ._pagination__item
            p= ++n
      ._pagination__next
    ._pagination__infoItem 
      span #{text}
    block
