//- Все примеси в этом файле должны начинаться c имени блока (section)

mixin section(mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +section('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' section--' + modsList[i].trim();
      }
    }

  .section(class=allMods)&attributes(attributes)
    
      

