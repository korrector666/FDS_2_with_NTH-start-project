//- Все примеси в этом файле должны начинаться c имени блока (_booking)

mixin _booking(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +booking('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _booking--' + modsList[i].trim();
      }
    }

  .booking(class=allMods)&attributes(attributes)
    +roomInfo('888','9 990₽', 'люкс')
    +dateCombo({ text:'Прибытие', value: '19.08.2019'},{ text: 'Выезд', value: '23.08.2019'})
    +textField({
          text: 'Гости',
          placeholder:'Сколько гостей',
          state:'default',
          dropBoxBtn:'true',
          dropDown:[{
              name: 'взрослые',
              value: '3'
              },{
              name: 'дети',
              },{
              name: 'младенцы',
            }]
          })('readonly')
    .booking__cost         
      .booking__item
        .booking__itemDescr 9 990₽ х 4 суток
        .booking__itemSumm 39 960₽

      .booking__item
        .booking__itemDescr Сбор за услуги: 
          label скидка 2 179₽
        .booking__itemInfo i
        .booking__itemSumm 0₽
      .booking__item.booking__item--lh18
        .booking__itemDescr Сбор за дополнительные услуги
        .booking__itemInfo i
        .booking__itemSumm 300₽
      .booking__summ
        .booking__summName Итого
        .booking__summSeparator
        .booking__summValue 38 081₽




      

      
    +btn('забронировать', 'coloredBig , mt12')          
    .booking__inner
      block
