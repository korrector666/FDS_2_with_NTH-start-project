//- Все примеси в этом файле должны начинаться c имени блока (_roomInfo)

mixin _roomInfo(roomNumber, roomPrice, _type, _size, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +roomInfo('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _roomInfo--' + modsList[i].trim();
      }
    }
    if (_size == undefined) {
        _size = 1;
    } else {
      _size = '_roomInfo__value--size' + _size; 
    }

  .roomInfo(class=allMods)&attributes(attributes)
    +flexRow()
      .roomInfo__numer
        |№ 
        if (_size != 1) 
          span.roomInfo__value(class=_size) #{roomNumber}
        else
          span.roomInfo__value #{roomNumber}
        
        span.roomInfo__luxe #{_type}
      .roomInfo__price 
        span.roomInfo__priceValue #{roomPrice} 
        | в сутки


    .roomInfo__inner
      block
