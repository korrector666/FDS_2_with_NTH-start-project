//- Все примеси в этом файле должны начинаться c имени блока (_footer)

mixin _footer(text, menu_lists, subscribe, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
        menu_lists - [{} , {} , {}] отдельный объек со списком меню
  //- Вызов:
        +footer('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _footer--' + modsList[i].trim();
      }
    }

  .footer(class=allMods)&attributes(attributes)
    .footer__inner
      .footer__descr
        +toxin
        p #{text}
   

      for menus,index in menu_lists
        .footer__items
          h3 #{menus.title}
          ul.footer__list
            for item in menus.list
              li.footer__item
                a(href=item.href) #{item.text}
      .footer__subscr
        h3 #{subscribe.header}
        p #{subscribe.text}
        +textField({
                name: 'footer_subscr',
                type: 'subscription',
                placeholder : subscribe.placeholder
                },' parentWide')
    hr.footer__hr
    .footer__sub Copyright © 2018 Toxin UI Kit. All rights reserved.
    block
