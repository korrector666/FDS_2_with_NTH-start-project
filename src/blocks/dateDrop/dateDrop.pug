//- Все примеси в этом файле должны начинаться c имени блока (_dateDrop)

mixin _dateDrop(options)

  //- Принимает:
  //-       text:'date Dropdown', - название сверху
            //- value: '19.08.2019', - текущее значение 
            //- filter: {   - если установлен фильтр, меняется вид
            //-   startDate: '19.08.2019',
            //-   endDate: '23.08.2019'
            //- }

  -
    // список модификаторов
    let allMods = '',
        _type= 'default',
        _value = options.value,
        placeholder = 'ДД.ММ.ГГГГ';

    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _dateDrop--' + modsList[i].trim();
      }
    }

    if (options.start !== undefined) {
      _type = 'filtered';
      _startDate = options.start;
      _endDate = options.end;
      allMods = allMods + '_dateDrop--mid-size';
      
    }

  .dateDrop(class=allMods)&attributes(attributes)
    label.dateDrop__info #{options.text}
    .dateDrop__downArrow
    input.dateDrop__input(placeholder=placeholder value=_value)
    .dateDrop__overlay
    .dateDrop__inner
      block
