//- Все примеси в этом файле должны начинаться c имени блока (_likeBtn)

mixin _likeBtn(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +likeBtn('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _likeBtn--' + modsList[i].trim();
      }
    }

  .likeBtn(class=allMods)&attributes(attributes)
    span.likeBtn__span #{text}
    block
