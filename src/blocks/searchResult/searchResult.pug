//- Все примеси в этом файле должны начинаться c имени блока (searchResult)

mixin searchResult(text, mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +searchResult('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' searchResult--' + modsList[i].trim();
      }
    }

  .searchResult(class=allMods)&attributes(attributes)
    .searchResult__options
      +dateDrop({
          text: 'даты пребывания в отеле',
          start: '19 авг',
          end: '23 авг'
        }
        )(readonly, data-startDate='19.08.2019', data-endDate='23.08.2020' ) 
      +textField({
            text: 'Гости',
            placeholder:'Сколько гостей',
            dropBoxBtn:'true',
            name: 'guestNumber',
            dropDown:[{
                name: 'взрослые',
                },{
                name: 'дети',
                },{
                name: 'младенцы',
              }]
            },
              'mid-size'
            )('readonly')
      +rangeSlider('диапазон цены', {state: "5000-1000"})
      span Стоимость за сутки пребывания в номере
      +checkBoxGroup('Checkbox Buttons' , demoCheckButtons)
      +title('доступность')
      +checkBox('coridor', 'Ширина коридоров в номере не менее 91 см.', false, 'Широкий коридор')
      +checkBox('helper', 'На 1 этаже вас встретит специалист  и проводит до номера.', false, 'Помощник для инвалидов')
      +textField({     
              text: 'удобства номера',
              name: 'roomAddons',
              dropDown:[{
                  name: 'спальни',
                  value: '2'
                  },{
                  name: 'кровати',
                  value: '2'
                  },{
                  name: 'ванные комнаты',
                }]
              },'mid-size')('readonly')
      +expCheckBoxList('дополнительные удобства', [{text: 'Завтрак'}, {text: 'Письменный стол', status : 'true'}, {text: 'Стул для кормления', status : 'true'}, {text: 'Кроватка', status : 'true'}, {text: 'Телевизор'}, {text: 'Шампунь'}])(data-expanded='false')


    .searchResult__main
      .searchResult__title
        h1 Номера, которые мы для вас подобрали
      .searchResult__content
        .searchResult__result
          .searchResult__roomWrapper
            +room('img/rooms/888.jpg', 888, 145, 5, '9 990₽', 'люкс', true)
          .searchResult__roomWrapper
            +room('img/rooms/840.jpg', 840, 65, 4, '9 900₽')
          .searchResult__roomWrapper
            +room('img/rooms/980.jpg', 980, 35, 3, '8 500₽')
          .searchResult__roomWrapper
            +room('img/rooms/856.jpg', 856, 19, 5, '7 300₽')
          .searchResult__roomWrapper
            +room('img/rooms/740.jpg', 740, 44, 4, '6 000₽')
          .searchResult__roomWrapper
            +room('img/rooms/982.jpg', 982, 56, 3, '5 800₽')
          .searchResult__roomWrapper
            +room('img/rooms/678.jpg', 678, 45, 5, '5 500₽')
          .searchResult__roomWrapper
            +room('img/rooms/450.jpg', 450, 39, 4, '5 300₽')
          .searchResult__roomWrapper
            +room('img/rooms/350.jpg', 350, 77, 3, '5 000₽')
