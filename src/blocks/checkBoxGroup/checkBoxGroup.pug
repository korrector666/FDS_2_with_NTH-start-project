//- Все примеси в этом файле должны начинаться c имени блока (_checkBoxGroup)

mixin _checkBoxGroup(text, list,  mods)

  //- Принимает:
  //-   text    {string} - текст
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +checkBoxGroup('Текст', 'some-mod')

  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' _checkBoxGroup--' + modsList[i].trim();
      }
    }


    if (typeof(list) !== 'undefined' && list){
      _list = list;
      for (let i = 0; i < _list.length; i++) {
        if (typeof(_list[i].item) == 'undefined'){
          _list[i].item = 'item-' +i;
        }
      }
    }    

  .checkBoxGroup(class=allMods)&attributes(attributes)
    +title(text)
    if (_list.length !== 0)
    each i in _list
      +checkBox(i.item, i.text, i.status)
    block
