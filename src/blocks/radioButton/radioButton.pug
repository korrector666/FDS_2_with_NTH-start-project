//- Все примеси в этом файле должны начинаться c имени блока (radioButton)

mixin radioButton(name, list, mods)

  //- Принимает:
        //- name  - название группы
        //- list  : {
        //-     text: 'text'
        //-     status: true/ false (only for one of all)
        //- }
  //-   mods    {string} - список модификаторов
  //- Вызов:
        +radioButton('Текст', 'some-mod')
  -
    // список модификаторов
    var allMods = '';
    if(typeof(mods) !== 'undefined' && mods) {
      var modsList = mods.split(',');
      for (var i = 0; i < modsList.length; i++) {
        allMods = allMods + ' radioButton--' + modsList[i].trim();
      }
    }

    if (typeof(list) !== 'undefined' && list){
      listOfRadio = list;
    }

  .radioButton(class=allMods)&attributes(attributes)
    .radioButton__inner 
      if (listOfRadio.length !== 0)
        each i in listOfRadio
          label
            input(type='radio' checked=i.status name= name)
            .radioButton__text 
              span.radioButton__span #{i.text}
    block
