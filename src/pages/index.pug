block content
      +section()
        .section__inner
          each i in colorBoxSetup 
            +colorBox(i._color,i.text)
        .section__inner
          each i in demoTextSetup
            +textDemo(i.text, i.size)
      +section
        div
          +_text_field({
            text: 'Text Field',
            name:'id1',
            placeholder:'Email',
            state:'default'
            })

          +_text_field({
            text: 'Text Field',
            name:'id2',
            placeholder:'Email',
            state:'Hover \/ Focus',
            value:'This is pretty awesome'
            })

          +_text_field({
            text: 'Dropdown',
            name:'id5',
            placeholder:'Сколько гостей',
            state:'default',
            dropBoxBtn:'true',
            dropDown:[{
                name: 'взрослые',
                },{
                name: 'дети',
                },{
                name: 'младенцы',
              }]
          })('readonly')

          +_text_field({
            text: 'masked text field',
            name:'id5',
            state:'Default',
            type:'maskDate'
            })

          +_text_field({
            text: 'Dropdown',
            name:'id6',
            state:'default',
            dropDown:[{
                name: 'спальни',
                item: '2'
                },{
                name: 'кровати',
                item: '2'
                },{
                name: 'ванные комнаты',
              }]
          })('readonly')     

        div

