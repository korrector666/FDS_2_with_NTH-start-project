block content
  +section()
    .section__inner
      each i in colorBoxSetup 
        +colorBox(i._color,i.text)
    .section__inner.section__inner--flexEnd
      each i in demoTextSetup
        +textDemo(i.text, i.size)
  +section()
    .section__row 
      .section__col-4
        +_textField({
          text: 'Text Field',
          name:'id1',
          placeholder:'Email',
          state:'default'
          })

        +_textField({
          text: 'Text Field',
          name:'id2',
          placeholder:'Email',
          state:'Hover \/ Focus',
          value:'This is pretty awesome'
          })

        +_textField({
          text: 'Dropdown',
          name: 'id5',
          placeholder:'Сколько гостей',
          state:'default',
          dropBoxBtn:'true',
          dropDown:[{
              name: 'взрослые',
              },{
              name: 'дети',
              },{
              name: 'младенцы',
            }]
          })('readonly')
        +_separator('h3')
        +_textField({
          text: 'masked text field',
          name: 'id5',
          state: 'Default',
          type: 'maskDate'
          })
        +_separator('h20')
        +_dateCombo({ text:'date Dropdown'},{ text: 'date Dropdown', value: '19.08.2019'})

        +_separator('h8')

        +_dateDrop({
          text: 'filter date dropdown',
          start: '19 авг',
          end: '23 авг'
        }
        )(readonly, data-startDate='19.08.2019', data-endDate='23.08.2020' ) 
        +_separator('h22')

        +_textField({
        name: 'id7',
        text: 'subscription text field',
        type: 'subscription'
        },'mid-size')
      .section__col-3.section__col-3--pl57

        +_checkBoxGroup('Checkbox Buttons' , demoCheckButtons)

        +_title('Radio Buttons')
        +_radioButton( 'gender_demo', demoRadioButtons)
        +_separator('h20')
        +_title('Toggle')
        +_toggle('Получать спецпредложения', true, 'offer', 'Toggle')
        +_toggle('Получать спецпредложения', false, 'offer' )
        +_separator()
        +_title('like button')
        .section__flex
          +_likeBtn('2')
          +_likeBtn('12')
        +_separator()

        +_title('Rate button')
        +_stars(4, 'star')
        +_stars(5, 'star2')
        +_separator()

      .section__col-3.section__col-3--ml45.section__col-3--pl57

        +_rangeSlider('range slider', {state: "5000-1000"})
        +_separator('h24')
        +_title('buttons')
        +btn('CLICK ME', 'colored')
        +btn('CLICK ME', 'coloredHovered')
        +_separator('nextStr')

        +btn('CLICK ME', 'bordered')
        +btn('CLICK ME', 'borderedHovered')
        +_separator('nextStr')

        +btn('CLICK ME')
        +btn('CLICK ME', 'cancel')
        +_separator('nextStr')

        +btn('перейти к оплате', 'coloredBig')
        +_separator('h32')

        +_title('pagination')
        +_pagination('1 – 12 из 100+ вариантов аренды', 15)
    +_separator('h76')
    .section__row
      .section__col-4

        +_textField({     
              text: 'Dropdown',
              name: 'id6',
              state: 'default',
              dropDown:[{
                  name: 'спальни',
                  value: '2'
                  },{
                  name: 'кровати',
                  value: '2'
                  },{
                  name: 'ванные комнаты',
                }]
              },'mid-size')('readonly')


        +_textField({
          text: 'Dropdown',
          name: 'id8',
          state: 'expanded',
          dropDown:[{
              name: 'спальни',
              value: '2'
              },{
              name: 'кровати',
              value: '2'
              },{
              name: 'ванные комнаты',
          }]
        },'showDrop , mid-size')('readonly')

        +_separator('h20')
        +_expCheckBoxList('expandable checkbox list',demoList)(data-expanded='false')
        +_expCheckBoxList('expandable checkbox list',demoList, 'showDrop')(data-expanded='true')

        

      .section__col-3.section__col-3--pl57
        +_textField({
          text: 'Dropdown',
          name: 'id5',
          placeholder:'Сколько гостей',
          state:'default',
          dropBoxBtn:'true',
          state: 'expanded',
          dropDown:[{
              name: 'взрослые',
              },{
              name: 'дети',
              },{
              name: 'младенцы',
            }]
          },
          'showDrop' )('readonly')

        +_separator('h75')

        +_title('rich Checkbox Buttons')
        +_checkBox('coridor', 'Ширина коридоров в номере не менее 91 см.', false, 'Широкий коридор')
        +_checkBox('helper', 'На 1 этаже вас встретит специалист  и проводит до номера.', false, 'Помощник для инвалидов')

      .section__col-3.section__col-3--ml45.section__col-3--pl57
        +_textField({
          text: 'Dropdown',
          name: 'id5',
          placeholder:'Сколько гостей',
          state:'default',
          dropBoxBtn:'true',
          state: 'expanded',
          dropDown:[{
              name: 'взрослые',
              value: '2'
              },{
              name: 'дети',
              value: '1'
              },{
              name: 'младенцы',
            }]
          },
          'showDrop' )('readonly')
        +_separator('h75')
        
        +_bulletList('Нельзя с питомцами ; Без вечеринок и мероприятий ; Время прибытия — после 13:00 , а выезд до 12:00')
    +_separator('h8')
    .section__row
      .section__col-4
        +_infoBlock( 'img/insert_emoticon.svg','Комфорт','Шумопоглощающие стены')
        +_infoBlock( 'img/location_city.svg','Удобство','Окно в каждой из спален')
      .section__col-8
        +_review('Мурад Сарафанов','5 дней назад', 12, 'Великолепный матрас на кровати в основной спальне! А пуфик вообще потрясающий. И стены, действительно, шумоподавляющие. Выкрикивал комплименты повару — никто не жаловался из соседей.', 'img/users/user1.png')
  +section('bg2')
    +_separator('h8')
    .section__row
      .section__col-4    
        +_findRoom()
        +_registration()
      +_separator('v30')
      .section__col-4    
        +_booking()
        +_login()
      +_separator('v30')
      .section__col-3    
        +_calendar()


